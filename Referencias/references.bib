   issn = {0306-2619},
   journal = {Applied Energy},
   keywords = {Buildings energy efficiency,Interaction detection,Machine learning,Occupant behavior modeling,Ubiquitous computing,Workplace interaction},
   month = {11},
   pages = {42-51},
   publisher = {Elsevier},
   title = {Learning occupants’ workplace interactions from wearable and stationary ambient sensing systems},
   volume = {230},
   year = {2018},
}

