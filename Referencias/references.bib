   keywords = {machine learning,measurement accuracy,physiological signals,thermal discomfort,wearable sensors},
   pages = {54-59},
   publisher = {Institute of Electrical and Electronics Engineers Inc.},
   title = {Thermal discomfort in the workplace: measurement through the combined use of wearable sensors and machine learning algorithms},
